{
  "// Configure Cursor to show approvals ONLY in chat panel": "",
  
  "// Disable inline edit prompts": "",
  "editor.inlineSuggest.suppressSuggestions": false,
  "editor.inlineSuggest.showToolbar": "onHover",
  "diffEditor.renderIndicators": false,
  
  "// Route all AI interactions to chat panel": "",
  "workbench.panel.chat.view.welcome": true,
  "chat.editor.renderWhitespace": "none",
  "workbench.panel.defaultLocation": "right",
  
  "// Cursor AI notification preferences": "",
  "cursor.general.notificationMode": "chat",
  "cursor.general.showInlineApprovals": false,
  "cursor.ai.approvalLocation": "chat",
  
  "// Reduce notification noise": "",
  "notifications.showErrors": true,
  "notifications.showWarnings": false,
  "notifications.showInfo": false,
  
  "// Keep auto-accept for small changes": "",
  "cursor.general.autoAcceptThreshold": 0.8,
  "cursor.general.requireConfirmation": false,
  "cursor.general.streamingEdits": true,
  
  "// But route approvals to chat when needed": "",
  "cursor.ai.chatIntegration": true,
  "cursor.general.consolidateApprovals": true
}