# Ultra MVP Environment Configuration
#
# This file contains all the environment variables needed to run the Ultra MVP.
# Copy this file to .env and fill in your actual API keys.

# === LLM API Keys ===

# OpenAI API (for GPT models)
OPENAI_API_KEY=your-openai-key-here

# Anthropic API (for Claude models)
ANTHROPIC_API_KEY=your-anthropic-key-here

# Google API (for Gemini models)
GOOGLE_API_KEY=your-google-key-here

# Mistral API (for Mistral models)
MISTRAL_API_KEY=your-mistral-key-here

# Llama API (if using llama.cpp API server)
LLAMA_API_KEY=your-llama-key-here

# === Local Model Configuration ===

# Ollama API (for running local models)
OLLAMA_BASE_URL=http://localhost:11434

# === Server Configuration ===

# Server host and port
HOST=0.0.0.0
PORT=8000

# Debug mode (set to False in production)
DEBUG=True

# Rate limiting (requests per minute)
RATE_LIMIT=100

# === Frontend Configuration ===

# API URL for frontend to connect to backend
REACT_APP_API_URL=http://localhost:8000/api

# === Cache Configuration ===

# Cache type (memory, redis)
CACHE_TYPE=memory

# Redis URL (if using Redis cache)
# REDIS_URL=redis://localhost:6379/0

# Cache TTL in seconds (24 hours)
CACHE_TTL=86400
