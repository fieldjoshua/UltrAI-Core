# Ultra Environment Configuration Template
# Copy this file to .env, .env.development, .env.testing, or .env.production

# Core Settings
ENVIRONMENT=development                 # development, testing, production
DEBUG=false                             # true or false
LOG_LEVEL=info                          # debug, info, warning, error, critical
API_HOST=0.0.0.0                        # Host to bind the server to
API_PORT=8000                           # Port to bind the server to
CORS_ORIGINS=*                          # Comma-separated list of allowed origins
SECRET_KEY=replace_with_secure_key      # Secret key for encryption

# Authentication
ENABLE_AUTH=true                        # true or false
JWT_SECRET=replace_with_secure_secret   # Secret for JWT token signing
JWT_ALGORITHM=HS256                     # Algorithm for JWT token signing
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30      # Access token expiration in minutes
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7         # Refresh token expiration in days

# Database
POSTGRES_USER=ultra                     # PostgreSQL username (for Docker)
POSTGRES_PASSWORD=ultra_dev_password    # PostgreSQL password (for Docker)
POSTGRES_DB=ultra_dev                   # PostgreSQL database name (for Docker)
DATABASE_URL=postgresql://ultra:ultra_dev_password@postgres:5432/ultra_dev
DATABASE_POOL_SIZE=5                    # Database connection pool size
DATABASE_MAX_OVERFLOW=10                # Maximum connection overflow
DATABASE_POOL_TIMEOUT=30                # Connection pool timeout in seconds

# Redis Cache
REDIS_PASSWORD=redis_password           # Redis password (for Docker)
REDIS_URL=redis://:redis_password@redis:6379/0  # Redis connection URL
ENABLE_CACHE=true                       # true or false
CACHE_TTL=3600                          # Cache TTL in seconds

# Storage
DOCUMENT_STORAGE_PATH=document_storage  # Path for document storage
TEMP_UPLOADS_PATH=temp_uploads          # Path for temporary uploads
TEMP_PATH=temp                          # Path for temporary files
LOGS_PATH=logs                          # Path for log files

# Security
ENABLE_SECURITY_HEADERS=true            # true or false
ENABLE_RATE_LIMIT=true                  # true or false
ENABLE_HTTPS_REDIRECT=false             # true or false
API_KEY_ENCRYPTION_KEY=replace_with_key # Key for API key encryption

# LLM Providers (at least one required in production)
OPENAI_API_KEY=your-openai-key-here     # OpenAI API key
ANTHROPIC_API_KEY=your-anthropic-key-here  # Anthropic API key
GOOGLE_API_KEY=your-google-key-here     # Google Generative AI API key
MISTRAL_API_KEY=your-mistral-key-here   # Mistral API key
DEEPSEEK_API_KEY=your-deepseek-key-here # DeepSeek API key
COHERE_API_KEY=your-cohere-key-here     # Cohere API key
DEFAULT_PROVIDER=openai                 # Default LLM provider
DEFAULT_MODEL=gpt-4o                    # Default model for the selected provider
DEFAULT_LEAD_MODEL=anthropic-claude     # Default lead model for orchestration
DEFAULT_ANALYSIS_TYPE=comparative       # Default analysis type

# Mock Settings
USE_MOCK=false                          # true or false
MOCK_MODE=false                         # true or false
ENABLE_MOCK_LLM=false                   # true or false

# Monitoring
SENTRY_DSN=your-sentry-dsn-here         # Sentry DSN for error tracking
SENTRY_ENVIRONMENT=development          # Sentry environment
SENTRY_TRACES_SAMPLE_RATE=1.0           # Sentry trace sample rate

# Frontend Settings
VITE_API_URL=http://localhost:8000      # API URL for frontend

# Feature Flags
# Add any feature flags here