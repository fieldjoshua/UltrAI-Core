# Ultra Testing Environment Configuration

# Core Settings
ENVIRONMENT=testing
TESTING=true
DEBUG=false
LOG_LEVEL=info
API_HOST=127.0.0.1
API_PORT=8086
CORS_ORIGINS=*
SECRET_KEY=testing-secret-key-not-for-production

# Authentication
ENABLE_AUTH=true
JWT_SECRET=testing-jwt-secret-not-for-production
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=60
JWT_REFRESH_TOKEN_EXPIRE_DAYS=30

# Database
DATABASE_URL=sqlite:///:memory:
DATABASE_POOL_SIZE=5
DATABASE_MAX_OVERFLOW=10
DATABASE_POOL_TIMEOUT=30

# Redis Cache
REDIS_URL=redis://localhost:6379/1
ENABLE_CACHE=true
CACHE_TTL=60

# Storage
DOCUMENT_STORAGE_PATH=test_storage
TEMP_UPLOADS_PATH=test_temp
TEMP_PATH=test_temp
LOGS_PATH=test_logs

# Security
ENABLE_SECURITY_HEADERS=true
ENABLE_RATE_LIMIT=true
ENABLE_HTTPS_REDIRECT=false
API_KEY_ENCRYPTION_KEY=testing-encryption-key-not-for-production

# LLM Providers (mock versions for testing)
OPENAI_API_KEY=test-openai-api-key
ANTHROPIC_API_KEY=test-anthropic-api-key
GOOGLE_API_KEY=test-google-api-key
DEFAULT_PROVIDER=openai
DEFAULT_MODEL=gpt-4o

# Mock Settings - Configurable for different test scenarios
USE_MOCK=false
MOCK_MODE=false
ENABLE_MOCK_LLM=false

# Monitoring - Disabled for tests
SENTRY_DSN=

