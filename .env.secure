# SECURE Environment Configuration
# This file replaces the compromised .env file
# API keys have been removed for security

# Core Settings
ENVIRONMENT=development
DEBUG=false
LOG_LEVEL=info
API_HOST=127.0.0.1
API_PORT=8000
CORS_ORIGINS=http://localhost:3000,http://localhost:5173
SECRET_KEY=CHANGE_THIS_IN_PRODUCTION

# Authentication
ENABLE_AUTH=true
ENABLE_API_KEY_VALIDATION=true
JWT_SECRET=CHANGE_THIS_IN_PRODUCTION
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7

# Database
DATABASE_URL=sqlite:///./ultra.db
DATABASE_POOL_SIZE=5
DATABASE_MAX_OVERFLOW=10
DATABASE_POOL_TIMEOUT=30

# Redis Cache
REDIS_URL=redis://localhost:6379/0
ENABLE_CACHE=true
CACHE_TTL=3600

# Storage
DOCUMENT_STORAGE_PATH=document_storage
TEMP_UPLOADS_PATH=temp_uploads
TEMP_PATH=temp
LOGS_PATH=logs

# Security
ENABLE_SECURITY_HEADERS=true
ENABLE_RATE_LIMIT=true
ENABLE_HTTPS_REDIRECT=false

# LLM Providers - SET THESE IN ENVIRONMENT OR RENDER DASHBOARD
# OPENAI_API_KEY=
# ANTHROPIC_API_KEY=
# GOOGLE_API_KEY=
# HUGGINGFACE_API_KEY=

DEFAULT_PROVIDER=openai
DEFAULT_MODEL=gpt-4o

# Mock Settings
USE_MOCK=false
MOCK_MODE=false
ENABLE_MOCK_LLM=false

# Feature Flags
ENABLE_ANALYTICS=true