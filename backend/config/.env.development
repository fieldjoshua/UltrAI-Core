# Ultra Development Environment Configuration

# Core Settings
ENVIRONMENT=development
DEBUG=true
LOG_LEVEL=debug
API_HOST=127.0.0.1
API_PORT=8085
CORS_ORIGINS=*
SECRET_KEY=development-secret-key-not-for-production

# Authentication
ENABLE_AUTH=false
JWT_SECRET=development-jwt-secret-not-for-production
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=60
JWT_REFRESH_TOKEN_EXPIRE_DAYS=30

# Database
DATABASE_URL=sqlite:///./ultra_dev.db
DATABASE_POOL_SIZE=5
DATABASE_MAX_OVERFLOW=10
DATABASE_POOL_TIMEOUT=30

# Redis Cache
REDIS_URL=redis://localhost:6379/0
ENABLE_CACHE=true
CACHE_TTL=3600

# Storage
DOCUMENT_STORAGE_PATH=document_storage
TEMP_UPLOADS_PATH=temp_uploads
TEMP_PATH=temp
LOGS_PATH=logs

# Security
ENABLE_SECURITY_HEADERS=true
ENABLE_RATE_LIMIT=true
ENABLE_HTTPS_REDIRECT=false
API_KEY_ENCRYPTION_KEY=development-encryption-key-not-for-production

# LLM Providers (not needed in development with mock mode)
OPENAI_API_KEY=
ANTHROPIC_API_KEY=
GOOGLE_API_KEY=
DEFAULT_PROVIDER=openai
DEFAULT_MODEL=gpt-4o

# Mock Settings
USE_MOCK=true
MOCK_MODE=true
ENABLE_MOCK_LLM=true

# Monitoring
SENTRY_DSN=

# Feature Flags
