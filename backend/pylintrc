[MASTER]
# Add the project root and virtual environment to Python path
init-hook='import sys; sys.path.extend([".", ".venv/lib/python3.12/site-packages"])'

# Use multiple processes to speed up Pylint (use "0" for auto)
jobs=0

# List of plugins to load
load-plugins=

# Allow loading of arbitrary C extensions
unsafe-load-any-extension=no

[MESSAGES CONTROL]
# Disable specific warnings
disable=
    C0111, # missing-docstring
    C0103, # invalid-name (for variables)
    W0621, # redefined-outer-name
    R0903, # too-few-public-methods (common in Pydantic models)
    R0913, # too-many-arguments
    W0511, # fixme
    C0301, # line-too-long (we use black for formatting)
    C0114, # missing-module-docstring
    C0115, # missing-class-docstring
    C0116, # missing-function-docstring
    R0901, # too-many-ancestors (common with Pydantic)
    W0622, # redefined-builtin
    W0212, # protected-access (needed for some Pydantic operations)
    E1101, # no-member (can be false positive with Pydantic)
    R0902, # too-many-instance-attributes (common in Pydantic models)
    W0707, # raise-missing-from
    C0412, # ungrouped-imports
    W0221, # arguments-differ (false positive with Pydantic validators)
    R0201, # no-self-use (false positive with Pydantic validators)
    W0613, # unused-argument (common in FastAPI dependencies)
    E0213, # no-self-argument (for class methods)

# Good variable names
good-names=i,j,k,ex,Run,_,id,db,v,cls

[FORMAT]
# Maximum number of characters on a single line
max-line-length=120

# Maximum number of lines in a module
max-module-lines=2000

# String used as indentation unit (2 spaces)
indent-string='    '

[BASIC]
# Regular expression which should only match function or class names
function-rgx=[a-z_][a-z0-9_]{2,50}$

# Regular expression which should only match correct variable names
variable-rgx=[a-z_][a-z0-9_]{2,50}$

# Regular expression which should only match correct class attribute names
class-attribute-rgx=([A-Za-z_][A-Za-z0-9_]{2,50}|(__.*__))$

# Regular expression which should only match correct argument names
argument-rgx=[a-z_][a-z0-9_]{2,50}$

[SIMILARITIES]
# Minimum lines number of a similarity
min-similarity-lines=7

# Ignore imports when computing similarities
ignore-imports=yes

[TYPECHECK]
# List of module names for which member attributes should not be checked
ignored-modules=numpy,tensorflow,torch,cv2,pygame,PIL

# List of classes names for which member attributes should not be checked
ignored-classes=SQLObject,SQLAlchemy,scoped_session,BaseSettings,Settings

# List of members which are set dynamically and missed by pylint inference
generated-members=numpy.*,torch.*,cv2.*,pygame.*

[VARIABLES]
# A regular expression matching the beginning of the name of dummy variables
dummy-variables-rgx=_$|dummy

# List of additional names to consider as builtins
additional-builtins=

[MISCELLANEOUS]
# List of note tags to take into consideration
notes=FIXME,XXX,TODO

[IMPORTS]
# Allow wildcard imports from modules that define __all__
allow-wildcard-with-all=no

[DESIGN]
# Maximum number of arguments for function / method
max-args=10

# Maximum number of locals for function / method body
max-locals=20

# Maximum number of return / yield for function / method body
max-returns=10

# Maximum number of statements in function / method body
max-statements=50

# Maximum number of parents for a class (see R0901).
max-parents=10

# Maximum number of attributes for a class (see R0902).
max-attributes=15

# Minimum number of public methods for a class (see R0903).
min-public-methods=0

# Maximum number of public methods for a class (see R0904).
max-public-methods=50
