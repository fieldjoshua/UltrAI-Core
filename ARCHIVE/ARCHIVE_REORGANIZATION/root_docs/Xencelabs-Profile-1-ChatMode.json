{
  "profile_name": "Claude Chat Mode",
  "description": "Active when Claude chat panel is focused",
  "led_color": "#9933FF",
  "trigger_condition": "window_title_contains:Chat|Claude|AI",
  
  "button_mappings": {
    "button_1": {
      "action": "key_combination",
      "keys": ["cmd", "enter"],
      "label": "📤 Send Message",
      "led_color": "#00FF00"
    },
    "button_2": {
      "action": "key_combination", 
      "keys": ["cmd", "k"],
      "label": "🗑️ Clear Chat",
      "led_color": "#FF6600"
    },
    "button_3": {
      "action": "key_combination",
      "keys": ["cmd", "shift", "n"],
      "label": "✨ New Chat",
      "led_color": "#0066FF"
    },
    "button_4": {
      "action": "key_combination",
      "keys": ["cmd", "shift", "e"],
      "label": "❓ Explain Code",
      "led_color": "#FFFF00"
    },
    "button_5": {
      "action": "key_combination",
      "keys": ["cmd", "shift", "g"],
      "label": "🤖 Generate Code",
      "led_color": "#FF00FF"
    },
    "button_6": {
      "action": "key_combination",
      "keys": ["cmd", "shift", "f"],
      "label": "🔧 Fix Code",
      "led_color": "#00FFFF"
    },
    "button_7": {
      "action": "key_combination",
      "keys": ["ctrl", "`"],
      "label": "🖥️ Terminal",
      "led_color": "#666666"
    },
    "button_8": {
      "action": "key_combination",
      "keys": ["cmd", "1"],
      "label": "📝 Editor",
      "led_color": "#888888"
    }
  },
  
  "dial_mappings": {
    "dial_1": {
      "increment": ["cmd", "+"],
      "decrement": ["cmd", "-"],
      "label": "🔍 Zoom"
    },
    "dial_2": {
      "increment": ["cmd", "option", "right"],
      "decrement": ["cmd", "option", "left"],
      "label": "📂 Switch Files"
    },
    "dial_3": {
      "increment": ["f8"],
      "decrement": ["shift", "f8"],
      "label": "⚠️ Navigate Issues"
    }
  }
}