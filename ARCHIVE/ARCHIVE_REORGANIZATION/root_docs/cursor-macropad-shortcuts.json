{
  "name": "Cursor AI Development Shortcuts for Xencelabs",
  "description": "Optimized shortcuts for Claude Code integration and development workflow",
  "version": "1.0",
  "shortcuts": {
    "button_1": {
      "name": "ü§ñ Accept AI Suggestion",
      "command": "editor.action.inlineSuggest.commit",
      "description": "Accept current AI suggestion",
      "color": "#00FF00"
    },
    "button_2": {
      "name": "‚ùå Reject AI Suggestion", 
      "command": "editor.action.inlineSuggest.hide",
      "description": "Dismiss current AI suggestion",
      "color": "#FF0000"
    },
    "button_3": {
      "name": "üîÑ Trigger AI Completion",
      "command": "editor.action.inlineSuggest.trigger",
      "description": "Manually trigger AI suggestions",
      "color": "#0066FF"
    },
    "button_4": {
      "name": "üìù Show AI Chat",
      "command": "workbench.panel.chat.view.copilot.focus",
      "description": "Open AI chat panel",
      "color": "#9933FF"
    },
    "button_5": {
      "name": "üîç Quick Open File",
      "command": "workbench.action.quickOpen",
      "description": "Quick file search (Cmd+P)",
      "color": "#FF9900"
    },
    "button_6": {
      "name": "‚ö° Command Palette",
      "command": "workbench.action.showCommands",
      "description": "Open command palette (Cmd+Shift+P)",
      "color": "#00FFFF"
    },
    "button_7": {
      "name": "üîß Toggle Terminal",
      "command": "workbench.action.terminal.toggleTerminal",
      "description": "Show/hide integrated terminal",
      "color": "#FFFF00"
    },
    "button_8": {
      "name": "üíæ Save All Files",
      "command": "workbench.action.files.saveAll",
      "description": "Save all modified files",
      "color": "#FF00FF"
    },
    "dial_1": {
      "name": "üîç Zoom Level",
      "command_increment": "workbench.action.zoomIn",
      "command_decrement": "workbench.action.zoomOut",
      "description": "Adjust editor zoom level"
    },
    "dial_2": {
      "name": "üìÇ Navigate Files",
      "command_increment": "workbench.action.nextEditor",
      "command_decrement": "workbench.action.previousEditor", 
      "description": "Switch between open files"
    },
    "dial_3": {
      "name": "üéØ Navigate Problems",
      "command_increment": "editor.action.marker.next",
      "command_decrement": "editor.action.marker.prev",
      "description": "Jump between errors/warnings"
    }
  },
  "advanced_combos": {
    "button_1_hold": {
      "name": "üöÄ Accept All AI Suggestions",
      "command": "editor.action.acceptSelectedSuggestion",
      "description": "Accept all pending AI suggestions"
    },
    "button_4_double_tap": {
      "name": "üí¨ New AI Chat",
      "command": "workbench.action.chat.open",
      "description": "Start new AI conversation"
    }
  },
  "workflow_presets": {
    "development_mode": {
      "description": "Optimized for active coding",
      "button_assignments": ["accept_ai", "reject_ai", "trigger_ai", "save_all", "terminal", "quick_open", "command_palette", "problems"]
    },
    "review_mode": {
      "description": "Optimized for code review",
      "button_assignments": ["next_change", "prev_change", "accept_change", "reject_change", "comment", "approve", "request_changes", "save"]
    }
  },
  "cursor_specific_commands": {
    "ai_commands": [
      "cursor.action.generateCode",
      "cursor.action.explainCode", 
      "cursor.action.refactorCode",
      "cursor.action.fixCode",
      "cursor.action.optimizeCode",
      "cursor.action.addComments",
      "cursor.action.generateTests",
      "cursor.action.generateDocs"
    ]
  }
}