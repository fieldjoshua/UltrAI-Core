# Ultra Production Environment Configuration

# Core Settings
ENVIRONMENT=production
DEBUG=false
LOG_LEVEL=info
API_HOST=0.0.0.0
API_PORT=8000
CORS_ORIGINS=https://app.ultrai.app,https://api.ultrai.app
SECRET_KEY=replace_with_secure_secret_in_production

# Authentication
ENABLE_AUTH=true
JWT_SECRET=replace_with_secure_jwt_secret_in_production
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7

# Database
DATABASE_URL=postgresql://ultrauser:replace_with_db_password@postgres:5432/ultra
DATABASE_POOL_SIZE=10
DATABASE_MAX_OVERFLOW=20
DATABASE_POOL_TIMEOUT=30

# Redis Cache
REDIS_URL=redis://redis:6379/0
ENABLE_CACHE=true
CACHE_TTL=3600

# Storage
DOCUMENT_STORAGE_PATH=/app/document_storage
TEMP_UPLOADS_PATH=/app/temp_uploads
TEMP_PATH=/app/temp
LOGS_PATH=/app/logs

# Security
ENABLE_SECURITY_HEADERS=true
ENABLE_RATE_LIMIT=true
ENABLE_HTTPS_REDIRECT=true
API_KEY_ENCRYPTION_KEY=replace_with_secure_encryption_key_in_production

# LLM Providers (at least one required in production)
OPENAI_API_KEY=
ANTHROPIC_API_KEY=
GOOGLE_API_KEY=
DEFAULT_PROVIDER=anthropic
DEFAULT_MODEL=claude-3-opus-20240229

# Mock Settings
USE_MOCK=false
MOCK_MODE=false
ENABLE_MOCK_LLM=false

# Monitoring
SENTRY_DSN=

# Feature Flags